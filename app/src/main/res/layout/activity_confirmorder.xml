<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/salesman_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.app.entero.direct.utils.custom.CustomTextView_Salesman
            android:layout_width="wrap_content"
            android:text="Order ID : "
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_margin="10dp"
            android:padding="5dp"
            app:fonts="Lato-Regular.ttf"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_height="wrap_content" />


        <com.app.entero.direct.utils.custom.CustomTextView_Salesman
            android:id="@+id/doc_id_tv"
            android:layout_width="wrap_content"
            android:text="388352"
            android:ellipsize="end"
            android:maxLines="1"
            app:fonts="Lato-bold.ttf"
            android:drawablePadding="5dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="@color/btn_color"
            android:textSize="18sp"
            android:gravity="center"
            android:padding="1dp"
            android:layout_height="wrap_content" />



    </LinearLayout>

    <com.app.entero.direct.utils.custom.CustomTextView_Salesman
        android:layout_width="wrap_content"
        android:text="Delivery option:"
        android:ellipsize="end"
        app:fonts="Lato-Regular.ttf"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_height="wrap_content" />



    <com.app.entero.direct.utils.custom.CustomTextView_Salesman
        android:layout_width="wrap_content"
        android:text="Comment(if any)"
        android:layout_margin="10dp"
        android:padding="5dp"
        app:fonts="Lato-Regular.ttf"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_height="wrap_content" />



    <LinearLayout
        android:id="@+id/comment_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        >
        <EditText
            android:id="@+id/comment_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:maxLines="6"
            android:textAlignment="viewStart"
            android:hint="Enter Comment here "
            android:minLines="6"
            android:paddingBottom="5dp"
            android:layout_margin="5dp"
            android:background="@drawable/rectanglular_background"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/twelvedp"
            />

    </LinearLayout>


    <!--<LinearLayout
        android:id="@+id/save_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        >-->
        <com.app.entero.direct.utils.custom.CustomTextView_Salesman
            android:id="@+id/save_Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Place Order"
            android:paddingLeft="@dimen/fourtydp"
            android:paddingRight="@dimen/fourtydp"
            android:paddingTop="@dimen/tendp"
            android:paddingBottom="@dimen/tendp"
            android:layout_margin="5dp"
            android:background="@drawable/rectanglular_background"
            android:textColor="@color/btn_color"
            android:textSize="@dimen/twelvedp"
            app:fonts="Lato-Bold.ttf" />

   <!-- </LinearLayout>-->
    </LinearLayout>
</ScrollView>
</LinearLayout>