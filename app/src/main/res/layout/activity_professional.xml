<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@drawable/login_bg"
        android:orientation="horizontal"
        android:layout_height="match_parent">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_weight="1"
        android:fitsSystemWindows="true"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/imgInterio"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/ic_entero_logo"
                android:layout_marginTop="20dp"
                tools:ignore="VectorDrawableCompat" />

            <LinearLayout
                android:id="@+id/topLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgInterio"
                android:orientation="vertical"
                android:layout_weight="1"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginRight="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp"
                    android:orientation="vertical">

                    <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        app:fonts="Lato-Regular.ttf"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="5dp"
                        android:textColor="@android:color/black"
                        android:text="PROFESSIONAL DETAILS"/>


                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/graybg"
                        />


                    <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                        android:id="@+id/txtImei"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        app:fonts="Lato-Regular.ttf"
                        android:textColor="@android:color/black"
                        android:text="Shop/Chemist Name"/>

                    <EditText
                        android:id="@+id/shop_or_chemist_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/edit_drawable"

                        />


                    <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        app:fonts="Lato-Regular.ttf"
                        android:textColor="@android:color/black"
                        android:text="Your Name"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/edit_drawable"

                        />

                    <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        app:fonts="Lato-Regular.ttf"
                        android:textColor="@android:color/black"
                        android:text="Drug License"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/edit_drawable"

                        />




                    <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        app:fonts="Lato-Regular.ttf"
                        android:textColor="@android:color/black"
                        android:text="GST"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/edit_drawable"

                        />

                    <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        app:fonts="Lato-Regular.ttf"
                        android:textColor="@android:color/black"
                        android:text="Pincode"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/edit_drawable"

                        />




                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/bottomLinear"
                    android:layout_below="@+id/topLinear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                        android:id="@+id/btnLogin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Update"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:paddingLeft="40dp"
                        app:fonts="Lato-Semibold.ttf"
                        android:paddingRight="40dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:textColor="@color/white"
                        android:background="@drawable/textview_bg_fill"
                        />

                    <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Skip"
                        android:id="@+id/skippTV"
                        android:gravity="center"
                        app:fonts="Lato-Regular.ttf"
                        android:drawablePadding="5dp"
                        android:textSize="12sp"
                        android:drawableLeft="@drawable/ic_list_next"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/primaryBlack"
                        />

                </RelativeLayout>

            </LinearLayout>



        </RelativeLayout>

    </ScrollView>


    </LinearLayout>


