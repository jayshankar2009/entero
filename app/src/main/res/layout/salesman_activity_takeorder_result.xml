<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/salesman_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|bottom"
        android:orientation="vertical">


        <ImageView
            android:layout_width="150dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/ic_thum_success" />


        <com.app.entero.direct.utils.custom.CustomTextView_Salesman
            android:id="@+id/text_take_order_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Order has been placed succesfully!"
            android:textSize="16sp"
            android:textColor="@color/green"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Order Id : "
                    android:textSize="12sp"
                    app:fonts="Lato-Regular.ttf" />

                <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                    android:id="@+id/text_take_order_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="36142"
                    android:textColor="@color/colorPrimary1"
                    android:textSize="14sp"
                    app:fonts="Lato-Bold.ttf" />

            </LinearLayout>

            <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Comment (If any)"
                android:textSize="12sp"
                android:layout_marginBottom="5dp"
                app:fonts="Lato-Regular.ttf" />

            <EditText
                android:id="@+id/edit_txt_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="6"
                android:scrollbars="vertical"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_save_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:text="Save"/>

        <com.app.entero.direct.utils.custom.CustomTextView_Salesman
            android:id="@+id/txt_stores_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:padding="15dp"
            android:background="@color/colorPrimary1"
            android:text="Wellcare Medical and Gen Stores"
            android:textSize="14sp"
            app:fonts="Lato-Bold.ttf" />

    </LinearLayout>




</LinearLayout>
