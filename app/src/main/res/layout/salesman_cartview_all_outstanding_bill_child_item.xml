<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ebeef2">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:elevation="100dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="Invoice date"
                            android:textSize="@dimen/tendp"
                            app:fonts="Lato-Regular.ttf" />

                        <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                            android:id="@+id/tx_outstanding_invoice_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:maxLength="10"
                            android:text="2018-11-15"
                            android:textColor="@android:color/black"
                            android:textSize="12sp"
                            app:fonts="Lato-Regular.ttf"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                            android:id="@+id/tx_month"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="Invoice No"
                            android:textSize="@dimen/tendp"
                            app:fonts="Lato-Regular.ttf" />

                        <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                            android:id="@+id/tx_outstanding_invoice_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@android:color/black"
                            android:textSize="12sp"
                            app:fonts="Lato-Regular.ttf"
                            android:text="U02816466" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:layout_weight=".2"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Total Items"
                            android:textSize="@dimen/tendp"
                            app:fonts="Lato-Regular.ttf" />

                        <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                            android:id="@+id/tx_outstanding_stock_count"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_margin="3dp"
                            android:background="@drawable/drawable_moderate_circle"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="1"
                            android:textSize="15dp"
                            app:fonts="Lato-Bold.ttf"
                            android:textColor="@color/white"
                            android:text="42" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/graybg" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="Cash Recieved"
                            android:textSize="@dimen/tendp"
                            app:fonts="Lato-Regular.ttf" />

                        <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                            android:id="@+id/tx_outstanding_bill_amt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@android:color/black"
                            android:textSize="12sp"
                            app:fonts="Lato-Regular.ttf"
                            android:text="0.0" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="Total Amount"
                            android:textSize="@dimen/tendp"
                            app:fonts="Lato-Regular.ttf"
                            android:textColor="@color/colorPrimary1"/>


                        <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                            android:id="@+id/tx_outstanding_received_amt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textSize="@dimen/twelvedp"
                            app:fonts="Lato-Regular.ttf"
                            android:textColor="@color/colorPrimary1"
                            android:text="18000.0" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="Due Amount"
                            android:textSize="@dimen/tendp"
                            app:fonts="Lato-Regular.ttf" />


                        <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                            android:id="@+id/tx_outstanding_due_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textSize="@dimen/twelvedp"
                            app:fonts="Lato-Regular.ttf"
                            android:textColor="@android:color/black"
                            android:text="18000.0" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="Days"
                            android:textSize="@dimen/tendp"
                            app:fonts="Lato-Regular.ttf" />


                        <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                            android:id="@+id/tx_outstanding_due_day_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textSize="@dimen/twelvedp"
                            app:fonts="Lato-Regular.ttf"
                            android:textColor="@android:color/black"
                            android:text="11" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        </android.support.v7.widget.CardView>
    <!--<View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/light_grey"/>-->
    </LinearLayout>