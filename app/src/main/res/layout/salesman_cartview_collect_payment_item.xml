<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/tendp"
    android:layout_marginRight="@dimen/tendp"
    android:layout_marginTop="@dimen/tendp"
    android:elevation="@dimen/fivedp"
    app:ignore="NamespaceTypo"
    card_view:cardBackgroundColor="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/tendp">

            <net.igenius.customcheckbox.CustomCheckBox
                android:id="@+id/checkbox_status"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:color_checked="@android:color/transparent"
                app:color_tick="@color/colorPrimary"
                app:color_unchecked_stroke="@color/colorAccent"
                app:small_tick="false" />
            <!--<CheckBox
                android:id="@+id/checkb"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:button="@drawable/customer_checkbox"
                android:scaleX="3"
                android:scaleY="3"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp" />-->

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fivedp"
                android:layout_weight="1.3"
                android:orientation="vertical">


                <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bill Id"
                    android:textSize="@dimen/tendp"
                    app:fonts="Lato-Regular.ttf" />

                <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                    android:id="@+id/txt_bill_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="U0018336961"
                    android:textColor="@color/cust_task"
                    android:textSize="14sp"
                    app:fonts="Lato-Bold.ttf" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">


                <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bill Date"
                    android:textSize="@dimen/tendp"
                    app:fonts="Lato-Regular.ttf" />

                <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                    android:id="@+id/txt_billdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="30/10/2018"
                    android:textColor="@color/submit"
                    android:textSize="14sp"
                    app:fonts="Lato-Bold.ttf" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:orientation="vertical">


                <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pending Days"
                    android:textSize="10sp"
                    app:fonts="Lato-Regular.ttf" />

                <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                    android:id="@+id/txt_pending_amnt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:textColor="@color/submit"
                    android:textSize="14sp"
                    app:fonts="Lato-Bold.ttf" />


            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#B3B3B3"
            android:padding="10dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/tendp"
            android:weightSum="2">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical">


                <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bill Items"
                    android:textSize="@dimen/tendp"
                    app:fonts="Lato-Regular.ttf" />

                <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                    android:id="@+id/txt_items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    app:fonts="Lato-Bold.ttf" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical">


                <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Grand Total"
                    android:textSize="10sp"
                    app:fonts="Lato-Regular.ttf" />

                <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                    android:id="@+id/txt_grandtotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rs.1926"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    app:fonts="Lato-Bold.ttf" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical">


                <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Discount"
                    android:textSize="10sp"
                    app:fonts="Lato-Regular.ttf" />

                <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                    android:id="@+id/txt_discount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rs.28"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    app:fonts="Lato-Bold.ttf" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical">


                <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Final Amount"
                    android:textSize="10sp"
                    app:fonts="Lato-Regular.ttf" />

                <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                    android:id="@+id/txt_finalamt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rs.1898"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    app:fonts="Lato-Bold.ttf" />


            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#B3B3B3"
            android:padding="10dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/tendp"
            android:weightSum="1">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/drawable_penalty_circle" />


                <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status : "
                    android:textSize="14sp"
                    app:fonts="Lato-Bold.ttf" />

                <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                    android:id="@+id/txt_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Partially Paid"
                    android:textColor="@color/colorPenalty"
                    android:textSize="14sp"
                    app:fonts="Lato-Bold.ttf" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="center"
                android:orientation="vertical">


                <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="Balance Amount"
                    android:textSize="10sp"
                    app:fonts="Lato-Regular.ttf" />

                <TextView
                    android:id="@+id/txt_balAmt"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/curve_gray_background"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="Rs.1898"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />


            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/txtBtmStsColor"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/colorPrimary1" />
    </LinearLayout>


</android.support.v7.widget.CardView>


