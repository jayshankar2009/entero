<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/highlights"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:background="#ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/order_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.4"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order ID"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textSize="10sp"
                        app:fonts="Lato-Regular.ttf" />

                    <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                        android:id="@+id/order_details_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="336631"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/colorPrimary1"
                        android:textSize="14sp" />

                    <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Order Amount"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textSize="10sp"
                        app:fonts="Lato-Regular.ttf" />

                    <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                        android:id="@+id/order_details_total_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rs. 4599"
                        android:textSize="14sp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@android:color/black"
                        app:fonts="Lato-Bold.ttf" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="vertical">

                    <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                        android:id="@+id/order_details_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="02/07/2018"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textSize="12sp"
                        android:textColor="@android:color/black"
                        app:fonts="Lato-Regular.ttf" />

                    <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                        android:id="@+id/order_details_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11:30 pm"
                        android:textColor="@android:color/black"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textSize="12sp"
                        app:fonts="Lato-Regular.ttf" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.2"
                android:gravity="center">

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#D3D3D3" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/invoice_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.4">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Invoice ID"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textSize="10sp"
                        app:fonts="Lato-Regular.ttf" />

                    <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                        android:id="@+id/order_details_invoice_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="U336631"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/color_green"
                        android:textSize="14sp"
                        app:fonts="Lato-Regular.ttf" />

                    <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Order Amount"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textSize="10sp"
                        app:fonts="Lato-Regular.ttf" />

                    <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                        android:id="@+id/order_details_paid_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:text="Rs. 4599"
                        android:textSize="14sp"
                        app:fonts="Lato-Bold.ttf" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="vertical">

                    <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                        android:id="@+id/order_details_paid_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="02/07/2018"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textSize="12sp"
                        android:textColor="@android:color/black"
                        app:fonts="Lato-Regular.ttf" />

                    <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                        android:id="@+id/order_details_paid_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11:30 pm"
                        android:textColor="@android:color/black"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textSize="12sp"
                        app:fonts="Lato-Regular.ttf" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="#D3D3D3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/order_details_status_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/drawable_moderate_circle"/>

            <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                android:id="@+id/order_details_status"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_horizontal"
                android:text="Delivered"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/color_green"
                android:textSize="12sp"
                app:fonts="Lato-Regular.ttf" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
