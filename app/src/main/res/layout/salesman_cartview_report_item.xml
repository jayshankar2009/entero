<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/white"
    android:layout_marginTop="1dp"
    card_view:cardCornerRadius="5dp"
    android:layout_marginBottom="20dp"
    android:layout_marginRight="5dp"
    card_view:cardElevation="5dp"
    app:ignore="NamespaceTypo">

    <LinearLayout
        android:id="@+id/report_item"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary1"
        android:gravity="center"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/report_images"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:paddingBottom="10dp"
        android:paddingTop="20dp"
        app:srcCompat="@drawable/ic_report_summary" />

    <com.app.entero.direct.utils.custom.CustomTextView_Salesman
        android:id="@+id/text_report_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Daily Collection"
        android:gravity="center"
        app:fonts="Lato-Regular.ttf"
        android:textSize="14sp"
        android:layout_marginBottom="15dp"

        android:textColor="@color/white"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    </LinearLayout>

</android.support.v7.widget.CardView>
