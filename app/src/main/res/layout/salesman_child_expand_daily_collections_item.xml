<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">
            <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                android:id="@+id/text_daily_collection_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:fonts="Lato-Regular.ttf"
                android:text="Crocin Pain Relief Tablet"
                android:layout_weight="1.5"
              android:textColor="@android:color/black"
                android:textSize="14sp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="right"
                android:layout_weight="0.5">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                app:srcCompat="@drawable/ic_list_rupee_small"/>

            <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                android:id="@+id/text_daily_collection_amount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Rs. 500"
                app:fonts="Lato-Bold.ttf"
                android:textColor="@android:color/black"
                android:gravity="right"
                android:textSize="14sp"/>
            </LinearLayout>

        </LinearLayout>
        <com.app.entero.direct.utils.custom.CustomTextView_Salesman
            android:id="@+id/text_daily_collection_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="11:29 am"
            app:fonts="Lato-Regular.ttf"
            android:layout_weight="1.5"
            android:layout_marginBottom="10dp"
            android:textSize="12sp"/>
        <View
            android:layout_width="match_parent"
            android:background="@color/graybg"
            android:layout_height="1dp"/>

    </LinearLayout>

</LinearLayout>
