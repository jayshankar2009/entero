<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <!-- <android.support.design.widget.AppBarLayout
         android:id="@+id/app_bar"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:fitsSystemWindows="true"
         android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
 -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_collapseMode="pin"
        android:background="@android:color/white"
        app:layout_scrollFlags="scroll|exitUntilCollapsed"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                android:id="@+id/txtHeader"
                android:layout_width="match_parent"
                android:text="Title"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                app:fonts="Lato-Bold.ttf"
                android:layout_marginRight="@dimen/twentydp"
                android:textColor="@color/colorPrimary1"
                android:textSize="18sp"
                android:gravity="center"
                android:padding="1dp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="20dp">

              <ImageView
                    android:id="@+id/add_credit_note_images"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:visibility="gone"
                  android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_thum_add"/>

                <SearchView
                    android:id="@+id/search_view_images"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:actionViewClass="android.support.v7.widget.SearchView"
                    app:srcCompat="@drawable/ic_nav_search"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.Toolbar>
    <!-- </android.support.design.widget.AppBarLayout>-->


</LinearLayout>