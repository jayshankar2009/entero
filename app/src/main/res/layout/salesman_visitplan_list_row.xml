<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/fivedp"
    android:elevation="@dimen/fivedp"
    card_view:cardBackgroundColor="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/fifteendp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:textSize="@dimen/small">

            <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                android:id="@+id/txt_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="55791"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/black"
                app:fonts="Lato-Bold.ttf" />

            <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wellcare Medical &amp; Gen Stores"
                android:textColor="@android:color/black"
                android:textSize="@dimen/small"
                app:fonts="Lato-Bold.ttf" />

            <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                android:id="@+id/txt_adrs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="72,kawli wadi,R.B.s Bole Rd"
                android:textSize="10sp"
                app:fonts="Lato-Regular.ttf" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tendp"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/tendp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_card_delivery"
                    tools:ignore="VectorDrawableCompat" />

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/tendp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_card_rupee"
                    tools:ignore="VectorDrawableCompat" />

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/tendp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_card_order"
                    tools:ignore="VectorDrawableCompat" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/ic_start_activity"
                android:gravity="center"
                android:text="Start Activity"
                android:textColor="@android:color/black"
                android:textSize="12sp" />


        </LinearLayout>


        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/eightdp"
            android:layout_weight="0.1"
            android:scaleType="center"
            android:src="@drawable/ic_card_arrow_right"
            tools:ignore="VectorDrawableCompat" />

        <!--icon_right_arrow-->


    </LinearLayout>


</android.support.v7.widget.CardView>


