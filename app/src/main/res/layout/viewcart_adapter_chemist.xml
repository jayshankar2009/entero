<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/view_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_row_background"
        android:padding="5dp">

        <ImageView
            android:id="@+id/delete_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_delete_white_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/delete_icon"
            android:text="Delete"
            android:textColor="#fff"
            android:textSize="13dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/view_foreground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/tools"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            card_view:cardCornerRadius="0dp"
            card_view:cardElevation="5dp">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <ImageView
                        android:id="@+id/take_order_product_img"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        card_view:srcCompat="@drawable/ic_list_item2" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.8"
                        android:orientation="vertical"
                        android:paddingLeft="10dp">

                        <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                            android:id="@+id/text_take_order_product_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Crocin 120 Straberry Suspension"
                            android:textColor="@color/colorPrimary1"
                            android:textSize="14sp"
                            app:fonts="Lato-Regular.ttf" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:weightSum="5">

                            <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                                android:id="@+id/text_take_order_product_unit"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"
                                android:text="60 ml"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textSize="12sp"
                                app:fonts="Lato-Bold.ttf" />

                            <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="PTR : "
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textSize="12sp"
                                app:fonts="Lato-Regular.ttf" />

                            <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                                android:id="@+id/text_take_order_product_ptr"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:text="24"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textSize="12sp"
                                app:fonts="Lato-Bold.ttf" />

                            <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="MRP : "
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textSize="12sp"
                                app:fonts="Lato-Regular.ttf" />

                            <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                                android:id="@+id/text_take_order_product_mrp"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:text="32"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textSize="12sp"
                                app:fonts="Lato-Bold.ttf" />

                        </LinearLayout>

                    </LinearLayout>

                    <com.app.entero.direct.utils.custom.CustomTextView_Salesman
                        android:id="@+id/text_take_order_product_stock_count"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:gravity="center"
                        android:text="105"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        app:font="Lato-Bold.ttf" />

                    <ImageView
                        android:id="@+id/take_order_product_stock_status_img"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"
                        android:visibility="gone"
                        card_view:srcCompat="@drawable/drawable_moderate_circle" />

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>
</FrameLayout>